<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mad.android.friendtracker.EditFriendActivity">

    <Button
        android:id="@+id/addFriendFromContract"
        android:layout_width="127dp"
        android:layout_height="51dp"
        android:text="Add Friend From Contact"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_birthday" />

    <Button
        android:id="@+id/done"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:text="Done"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/addFriendFromContract"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.562"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_birthday" />


    <EditText
        android:id="@+id/edit_email"
        android:layout_width="305dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="328dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        tools:layout_editor_absoluteY="327dp"
        tools:layout_editor_absoluteX="45dp" />


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="307dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="278dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_email"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edit_birthday"
        android:layout_width="305dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="none"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="383dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="239dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.031"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
